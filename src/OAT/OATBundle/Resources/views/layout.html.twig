<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>{% block title %}Online Assessment Tool{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('bundles/oat/icons/favicon.ico') }}">
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/oat/css/reset.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/oat/css/style.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.21/themes/base/jquery-ui.css" />

    {% endblock %}
    {% block scripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript"></script>

    {% endblock %}
</head>

<body>

<div class="navbar" class="floatwrap">
    <div class="inner-navbar">
        <div id="title">
            <h1><a href="{{ path('oat_oat_default_index') }}">Online Assessment Tool</a></h1>
        </div>

        <ul class="nav">
            <li><a href="{{ path('oat_oat_assessment_select') }}">start bevraging</a></li>
            <li><a href="{{ path('oat_oat_questioncategory_grouplist') }}">opleidingen</a></li>
            {% if app.user  %}
            <li><a href="{{ path('oat_oat_question_list') }}">vragen</a></li>
            <li><a href="{{ path('oat_oat_questioncategory_list') }}">categorieÃ«n</a></li>
            <li><a target="_blank" href="{{ path('oat_oat_question_medialist') }}">afbeeldingen</a></li>
            <li><a href="{{ path('oat_oat_statistics_assessment') }}">statistieken</a></li>
            <li><a href="{{ path('logout') }}" id="authentication-button">afmelden</a></li>
            {% else %}
            <li><a href="{{ path('oat_oat_authentication_login') }}" id="authentication-button">aanmelden</a></li>
            {% endif %}
        </ul>
    </div>
</div>

<div id="content" class="floatwrap">
    {% block content %}
    <p>this is a template</p>
    {% endblock %}
</div>

<div id="footer" class="floatwrap">
    {% block footer %}
    <div class="column4 prefix1">Website door Bram Cordie in opdracht van de K.H.Leuven, departement Gezondheidszorg & Technologie.</div>

    <div class="column2 prefix1">
        <a target="_blank" class="footer-link" id="dml-link" href="http://www.dml.kuleuven.be">
        </a>
    </div>

    <div class="column2 prefix1">
        <a target="_blank" class="footer-link" id="GenT-link" href="http://www.khleuven.be/Info-inschrijven/Locaties/Departement-Gezondheidszorg-en-Technologie">
        </a>
    </div>
    {% endblock %}
</div>
</body>
</html>